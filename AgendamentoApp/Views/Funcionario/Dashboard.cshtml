@model FuncionarioAgendamentosViewModel

@{
    ViewData["Title"] = "Dashboard do Profissional";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Meus Agendamentos</h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Agendamentos de Hoje</h5>
                    @if (!Model.AgendamentosHoje.Any())
                    {
                        <p class="text-muted">Nenhum agendamento para hoje.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Horário</th>
                                        <th>Cliente</th>
                                        <th>Serviço</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var agendamento in Model.AgendamentosHoje.OrderBy(a => a.DataHora))
                                    {
                                        <tr>
                                            <td>@agendamento.DataHora.ToString("HH:mm")</td>
                                            <td>@agendamento.ClienteNome</td>
                                            <td>@agendamento.ServicoNome</td>
                                            <td>
                                                @if (agendamento.DataHora > DateTime.Now)
                                                {
                                                    <span class="badge bg-primary">Aguardando</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Realizado</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Próximos Agendamentos</h5>
                    @if (!Model.ProximosAgendamentos.Any())
                    {
                        <p class="text-muted">Nenhum agendamento futuro.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Horário</th>
                                        <th>Cliente</th>
                                        <th>Serviço</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var agendamento in Model.ProximosAgendamentos)
                                    {
                                        <tr>
                                            <td>@agendamento.DataHora.ToString("dd/MM/yyyy")</td>
                                            <td>@agendamento.DataHora.ToString("HH:mm")</td>
                                            <td>@agendamento.ClienteNome</td>
                                            <td>@agendamento.ServicoNome</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Atualiza a página a cada 5 minutos para manter os status atualizados
            setTimeout(function() {
                location.reload();
            }, 300000);
        });
    </script>
}
